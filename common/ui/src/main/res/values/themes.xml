<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EasyPayments.MaterialLight" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="android:colorEdgeEffect">@color/on_primary_container</item>
    </style>

    <style name="Theme.EasyPayments" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.EasyPayments.MaterialLight</item>
    </style>
</resources>