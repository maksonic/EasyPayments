<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EasyPayments.MaterialDark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Theme.EasyPayments" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_brand_night</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.EasyPayments.MaterialDark</item>
    </style>
</resources>